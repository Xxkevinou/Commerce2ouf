<h1>Cart#show</h1>
<p>Find me in app/views/cart/show.html.erb</p>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<% @current_cart.items.each do |f| %>
<%= image_tag(f.image_url, size: "300") %>
<%= link_to "Delete", cart_destroy_path(:cat_id => f.id) %>
<% end %>

<% if @final_price > 0 %>
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount of your cart: <%= @final_price %>$</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Order your cart's items"
          data-amount="@final_price"
          data-locale="auto"></script>
<% end %>
<% end %>